{
	"name": "Stay On Track",
	"version": "1.0",
	"description": "Blocking distracting websites and staying focused while studying",
	"permissions": ["storage", "tabs", "webNavigation"],
	"background": {
		"service_worker": "background.js"
	},
	"host_permissions": ["*://*/*"],
	"action": {
		"default_popup": "popup.html",
		"default_icon": "icon.png"
	},
	"options_page": "options.html"
}